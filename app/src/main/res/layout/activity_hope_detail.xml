<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HopeSqure.ViewPager2.PublishAndDetail.HopeDetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/wheat_color"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/hopeDetail_back_ImageView"
            android:layout_width="40dp"
            android:layout_marginLeft="8dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/back" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="作业拼详情"
            android:gravity="start|center"
            android:layout_margin="10dp"
            android:textSize="25sp"/>
    </LinearLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="发布内容"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:background="@color/faint_yellow"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/hopeDetail_course_job_TextView"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="软件工程-作业六"
                        android:textSize="20sp"
                        android:layout_marginLeft="30dp"
                        android:gravity="start|center"/>
                    <ImageButton
                        android:id="@+id/hopeDetail_dealOperation_ImageButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/operation"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="5dp">
                    <TextView
                        android:id="@+id/hopeDetail_time_TextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:text="昨天 22:40"
                        android:textColor="@color/sky_blue"
                        android:gravity="start|center"
                        android:layout_marginLeft="30dp"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="发布者:"
                        android:gravity="end|center"/>
                    <TextView
                        android:id="@+id/hopeDetail_seekerName_TextView"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:text="张三"
                        android:gravity="start|center"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/hopeDetail_content_TextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="求助内容求助内容求助内容求助内容求助内容求助内容求助内容求助内容求助内容求助内容求助内容"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:layout_marginHorizontal="30dp"
                    />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey"
                    android:layout_margin="5dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginVertical="10dp">
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/hopeDetail_addLike_ImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/zan"/>
                    <TextView
                        android:id="@+id/hopeDetail_likeNum_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:text="1234"
                        android:gravity="center"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"/>
                    <ImageView
                        android:id="@+id/hopeDetail_prepareComment_ImageView"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:src="@drawable/comment"/>
                    <TextView
                        android:id="@+id/hopeDetail_commentNum_TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="123"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"/>
                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="@color/grey"
                    android:layout_marginHorizontal="10dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/hopeDetail_solveNum_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="帮助记录"
                android:textSize="25sp"
                android:textColor="@color/black"
                android:paddingLeft="20dp"
                android:background="@color/faint_yellow"/>
            <!-- 这里放置你的RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/hopeDetail_solveHelp_RecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>