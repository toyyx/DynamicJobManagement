<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/courseJobForTeacher_title_TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="作业一"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/courseJobForTeacher_operation_ImageButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/temp_icon"
            android:layout_marginRight="20dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="截止时间:"
            android:gravity="start|center"
            android:layout_marginLeft="20dp"/>
        <TextView
            android:id="@+id/courseJobForTeacher_endTime_TextView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="2024年5月23日 21:09"
            android:gravity="start|center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="已提交"
            android:gravity="center"/>
        <TextView
            android:id="@+id/courseJobForTeacher_commitNum_TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="10"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="/"
            android:gravity="center"/>
        <TextView
            android:id="@+id/courseJobForTeacher_memberNum_TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="109"
            android:gravity="center"
            android:layout_marginRight="20dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"/>
</LinearLayout>