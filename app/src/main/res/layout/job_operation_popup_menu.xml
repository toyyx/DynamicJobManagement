<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="@android:color/white"
    android:elevation="4dp">

    <TextView
        android:id="@+id/jobOperation_updateJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="修改作业设置"
        android:clickable="true"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/jobOperation_checkJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="批改作业"
        android:clickable="true"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/jobOperation_deleteJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="删除作业"
        android:clickable="true"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/jobOperation_exportJob"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="导出作业情况"
        android:clickable="true"
        android:background="?attr/selectableItemBackground" />

    <TextView
        android:id="@+id/jobOperation_exportHelp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="导出作业拼情况"
        android:clickable="true"
        android:background="?attr/selectableItemBackground" />
</LinearLayout>
